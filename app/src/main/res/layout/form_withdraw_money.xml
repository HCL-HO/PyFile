<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="com.hec.app.activity.FormActivity"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_back_white"

                android:paddingLeft="-40dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/title_change_ac_pw"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical"

        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/whole">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/withdraw_amount"
                        android:textSize="14dp"
                        android:id="@+id/tv1"
                        android:textColor="#9e9e9e"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="14dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:id="@+id/error1"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="14dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@mipmap/icon_exclaim"
                            android:layout_marginRight = "10dp"
                            android:layout_toLeftOf="@+id/error_pw1"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fund_pw_error"
                            android:textColor="#E9516A"
                            android:textSize="14dp"
                            android:id="@+id/error_pw1"
                            />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f2f2f2"
                    android:orientation="horizontal"
                    android:id="@+id/rl2">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="numberDecimal"
                        android:ems="16"
                        android:background="@null"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:id="@+id/cur_pw"
                        android:layout_toLeftOf="@+id/unit"
                        android:digits="1234567890"
                        android:textCursorDrawable="@drawable/textcursor"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:padding="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/unit"
                        android:textColor="#9e9e9e"
                        android:textSize="16dp"
                        />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@mipmap/icon_cross"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/error_cross1"
                        android:textSize="16dp"
                        android:layout_marginRight="16dp"
                        android:visibility="gone"
                        />
                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_fund_pw"
                        android:textSize="14dp"
                        android:id="@+id/tv2"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="28dp"
                        android:layout_marginBottom="14dp"
                        android:textColor="#9e9e9e" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:id="@+id/error2"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="14dp"
                        android:visibility="gone"
                        >

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@mipmap/icon_exclaim"
                            android:layout_marginRight = "10dp"
                            android:layout_toLeftOf="@+id/error_pw2"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fund_pw_error"
                            android:textColor="#E9516A"
                            android:textSize="14dp"
                            android:id="@+id/error_pw2"
                            />
                    </LinearLayout>

                    <!--<ImageView-->
                        <!--android:layout_width="24dp"-->
                        <!--android:layout_height="24dp"-->
                        <!--android:id="@+id/error_pw_img"-->
                        <!--android:src="@mipmap/icon_exclaim"-->
                        <!--android:layout_toLeftOf="@+id/error_pw"-->
                        <!--android:layout_marginLeft="16dp"-->
                        <!--android:layout_marginRight="10dp"-->
                        <!--android:layout_marginTop="22dp"-->
                        <!--android:layout_marginBottom="14dp"-->
                        <!--android:visibility="gone"-->
                        <!--/>-->
                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="@string/fund_pw_error"-->
                        <!--android:textColor="#E9516A"-->
                        <!--android:textSize="14dp"-->
                        <!--android:id="@+id/error_pw"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:layout_marginRight="16dp"-->
                        <!--android:layout_marginTop="28dp"-->
                        <!--android:layout_marginBottom="14dp"-->
                        <!--android:visibility="gone"-->
                        <!--/>-->

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f2f2f2"
                    android:orientation="horizontal"
                    android:id="@+id/rl4">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:background="@null"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:id="@+id/new_pw"
                        android:textCursorDrawable="@drawable/textcursor"
                        />
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@mipmap/icon_cross"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/error_cross2"
                        android:textSize="16dp"
                        android:layout_marginRight="16dp"
                        android:visibility="gone"
                        />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl5"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/re_new_pw"
                        android:textSize="14dp"
                        android:id="@+id/tv"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="28dp"
                        android:layout_marginBottom="14dp"
                        android:textColor="#9e9e9e"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:id="@+id/error3"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="14dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@mipmap/icon_exclaim"
                            android:layout_marginRight = "10dp"
                            android:layout_toLeftOf="@+id/error_pw3"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fund_pw_error"
                            android:textColor="#E9516A"
                            android:textSize="14dp"
                            android:id="@+id/error_pw3"
                            />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f2f2f2"
                    android:id="@+id/rl6"
                    android:visibility="gone">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:background="@null"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:id="@+id/re_new_pw"
                        android:textCursorDrawable="@drawable/textcursor"
                        />
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@mipmap/icon_cross"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/error_cross3"
                        android:textSize="16dp"
                        android:layout_marginRight="16dp"
                        android:visibility="gone"
                        />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/withdraw_card_info"
                    android:textSize="14dp"
                    android:id="@+id/tv3"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="14dp"
                    android:textColor="#9e9e9e"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="info#1"
                    android:textSize="14dp"
                    android:id="@+id/user_tv"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="info#2"
                    android:textSize="14dp"
                    android:id="@+id/card_no_tv"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="info#2"
                    android:textSize="14dp"
                    android:id="@+id/quickinfo1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="info#2"
                    android:textSize="14dp"
                    android:id="@+id/quickinfo2"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="info#2"
                    android:textSize="14dp"
                    android:id="@+id/quickinfo3"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="info#2"
                    android:textSize="14dp"
                    android:id="@+id/quickinfo4"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="30dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    >
                    <LinearLayout
                        android:layout_width="328dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/rect_green"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:id="@+id/gotoupdatebankinfo"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:padding="4dp"
                            android:src="@mipmap/icon_updatebank" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="完善资料"
                            android:textSize="16dp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
>
                    <LinearLayout
                        android:layout_width="328dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="24dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/rect_green"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:id="@+id/confirm_change"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:padding="4dp"
                            android:id="@+id/comfirm_img"
                            android:src="@mipmap/icon_money_round" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/userName"
                            android:text="@string/withdraw_now"
                            android:textSize="16dp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e7f5f6"
                    android:orientation="horizontal"
>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:paddingLeft="16dp"

                        android:src="@mipmap/icon_sweet" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="16dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/friendly_reminder"
                            android:textSize="16dp"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/reminder"
                            android:textStyle="bold"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="10dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1: "
                                    android:textSize="14dp"
                                    android:layout_gravity="center_horizontal"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/withdraw_reminder_1"
                                    android:textSize="14dp"
                                    android:layout_gravity="center_vertical"
                                    />


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="5dp"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2: "
                                    android:textSize="14dp"
                                    android:layout_gravity="center_horizontal"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/withdraw_reminder_2"
                                    android:textSize="14dp"
                                    android:layout_gravity="center_vertical"
                                    />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>