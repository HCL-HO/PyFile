<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:id="@+id/sv_right_menu"
        android:layout_width="288dp"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:id="@+id/ll1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/menu_refresh"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:src="@mipmap/refresh_button" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textSize="16sp"
                            android:textColor="#ffffff"
                            android:id="@+id/tv_user_name"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <LinearLayout
                                style="@style/Menu_Title_Rect_Style">

                                <TextView
                                    style="@style/Middel_Content_Style1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/balance" />
                            </LinearLayout>

                            <TextView
                                style="@style/Menu_Text_Style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="正在载入..."
                                android:id="@+id/tv_availableScores" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <LinearLayout
                                style="@style/Menu_Title_Rect_Style">

                                <TextView
                                    style="@style/Middel_Content_Style1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/frozen" />
                            </LinearLayout>


                            <TextView
                                style="@style/Menu_Text_Style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="正在载入..."
                                android:id="@+id/tv_freezeScores" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <LinearLayout
                                style="@style/Menu_Title_Rect_Style">

                                <TextView
                                    style="@style/Middel_Content_Style1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/profitloss" />
                            </LinearLayout>

                            <TextView
                                style="@style/Menu_Text_Style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="正在载入..."
                                android:id="@+id/tv_allGain"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/sliding_menu_recharge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgRecharge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_recharge"
                            android:layout_centerVertical="true"/>

                        <TextView
                            style="@style/Menu_Text_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/imgRecharge"
                            android:text="@string/recharge"
                            android:layout_marginLeft="8dp"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/sliding_menu_withdraw"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgWithdraw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_withdraw"
                            android:layout_centerVertical="true"/>

                        <TextView
                            style="@style/Menu_Text_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/imgWithdraw"
                            android:text="@string/withdraw"
                            android:id="@+id/textView2"
                            android:layout_marginLeft="8dp"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/sliding_menu_transfer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgtransfer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/imgtansfer"
                            android:layout_centerVertical="true"/>

                        <TextView
                            style="@style/Menu_Text_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/imgtransfer"
                            android:text="@string/transfer"
                            android:id="@+id/textView3"
                            android:layout_marginLeft="8dp"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_below="@id/ll1"
                android:background="@color/white"
                android:id="@+id/ll2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:clickable="true"
                            android:id="@+id/sliding_menu_lottery_layout">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_lottery_history" />

                            <TextView
                                style="@style/Menu_Item_Style"
                                android:text="@string/lottery_history" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_detail" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:clickable="true"
                            android:id="@+id/sliding_menu_after_layout">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_after" />

                            <TextView
                                style="@style/Menu_Item_Style"
                                android:text="@string/after_history" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_detail" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:clickable="true"
                            android:id="@+id/sliding_menu_money_layout">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_money" />

                            <TextView
                                style="@style/Menu_Item_Style"
                                android:text="@string/money_detail" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_detail" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:clickable="true"
                            android:id="@+id/sliding_menu_agent_layout">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_agent" />

                            <TextView
                                style="@style/Menu_Item_Style"
                                android:text="@string/agent_center" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_detail" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:clickable="true"
                            android:id="@+id/sliding_menu_artical_layout">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_artical"
                                android:id="@+id/imageView3" />
                            <TextView
                                android:visibility="invisible"
                                android:background="@drawable/count_circle"
                                android:id="@+id/tv_article_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="10sp"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:layout_marginLeft="-10dp"
                                android:layout_marginTop="8dp"/>

                            <TextView
                                style="@style/Menu_Item_Style"
                                android:text="@string/artical" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_detail" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:gravity="center_horizontal"
                            android:background="@drawable/rect_record_btn2"
                            android:visibility="visible"
                            android:id="@+id/backToLottery">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textColor="#08a09d"
                                android:drawableLeft="@mipmap/ic_action_return"
                                android:text="@string/return_to_lottery" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:id="@+id/easter_egg"
                            android:visibility="gone">
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp"
                            android:background="#ffffff">

                            <TextView
                                android:id="@+id/connect_service"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="30dp"
                                android:textSize="18sp"
                                android:text="联系客服" />

                            <LinearLayout
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:id="@+id/sliding_menu_setting"
                                android:orientation="horizontal"
                                android:gravity="right"
                                android:layout_marginRight="20dp">


                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/icon_settings" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="18sp"
                                    android:text="@string/settings" />
                            </LinearLayout>

                            <!--<LinearLayout-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="40dp"-->
                            <!--android:layout_weight="1"-->
                            <!--android:orientation="horizontal"-->
                            <!--android:layout_gravity="center_vertical"-->
                            <!--android:gravity="center">-->

                            <!--<ImageView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_gravity="center"-->
                            <!--android:src="@mipmap/icon_message" />-->

                            <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_gravity="center"-->
                            <!--android:layout_marginLeft="5dp"-->
                            <!--android:text="@string/internal_msg" />-->
                            <!--</LinearLayout>-->

                        </LinearLayout>
                        <!--<LinearLayout-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="50dp"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:layout_marginTop="30dp"-->
                        <!--android:gravity="center_horizontal"-->
                        <!--android:background="@drawable/rect_green_border"-->
                        <!--android:padding="4dp">-->
                        <!--<TextView-->
                        <!--android:layout_width="200dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:gravity="center"-->
                        <!--android:drawableLeft="@mipmap/ic_action_return"-->
                        <!--android:text="@string/return_to_lottery" />-->
                        <!--</LinearLayout>-->

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
