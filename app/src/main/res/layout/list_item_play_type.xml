<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/wrapsomething"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPlayTypeName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:gravity="left"
            android:text="sssss" />

        <LinearLayout
            android:id="@+id/indicate_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/select_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wenhao" />

            <ImageView
                android:id="@+id/select_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wenhao" />

            <ImageView
                android:id="@+id/select_img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wenhao" />

            <ImageView
                android:id="@+id/select_img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wenhao" />

            <ImageView
                android:id="@+id/select_img5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wenhao" />

        </LinearLayout>
    </LinearLayout>

    <GridLayout
        android:id="@+id/playTypeRadioContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:columnCount="2">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ddddd" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ddddd" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ddddd" />
    </GridLayout>
</LinearLayout>
