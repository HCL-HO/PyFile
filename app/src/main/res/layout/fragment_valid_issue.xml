<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="44dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/issue_layout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/valid_issue_textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/valid_issue_textview1"
                android:textSize="14dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="14dp"
                android:textColor="#9e9e9e"
                />

            <RelativeLayout
                android:id="@+id/valid_issue_spinner_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/valid_issue_textview1"
                android:background="@color/light_gray">

                <Spinner
                    android:spinnerMode="dropdown"
                    android:id="@+id/valid_issue_spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/valid_issue_answer_title1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/valid_issue_spinner_layout1">
                <TextView
                    android:id="@+id/valid_issue_answer_textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="14dp"
                    android:textColor="#9e9e9e"
                    android:text="@string/valid_issue_answer_textview1"

                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/error1"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="14dp"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/icon_exclaim"
                        android:layout_marginRight = "10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#E9516A"
                        android:textSize="14dp"
                        android:id="@+id/error_msg1"
                        />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/edit_field1"
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:background="@color/light_gray"
                android:layout_below="@id/valid_issue_answer_title1"
                >
                <EditText
                    android:id="@+id/valid_issue_answer_edittext1"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:textColorHint="@color/hint_word_gray"
                    android:imeOptions="actionNext"
                    />
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@mipmap/icon_cross"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/btn_delete1"
                    android:layout_marginRight="16dp"
                    android:visibility="gone"
                    />
            </RelativeLayout>
        </RelativeLayout>





        <RelativeLayout
            android:id="@+id/issue_layout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/issue_layout1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/valid_issue_textview2"
                android:text="@string/valid_issue_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="14dp"
                android:textColor="#9e9e9e"
                />

            <RelativeLayout
                android:id="@+id/valid_issue_spinner_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/valid_issue_textview2"
                android:background="@color/light_gray">

                <Spinner
                    android:spinnerMode="dropdown"
                    android:id="@+id/valid_issue_spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/valid_issue_answer_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/valid_issue_spinner_layout2">
                <TextView
                    android:id="@+id/valid_issue_answer_textview2"
                    android:text="@string/valid_issue_answer_textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="14dp"
                    android:textColor="#9e9e9e"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/error2"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="14dp"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/icon_exclaim"
                        android:layout_marginRight = "10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#E9516A"
                        android:textSize="14dp"
                        android:id="@+id/error_msg2"
                        />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/edit_field2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/valid_issue_answer_title"
                android:background="@color/light_gray"
                >
                <EditText
                    android:id="@+id/valid_issue_answer_edittext2"
                    android:layout_width="fill_parent"
                    android:layout_height="56dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:textColorHint="@color/hint_word_gray"
                    android:imeOptions="actionDone"
                    />
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@mipmap/icon_cross"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/btn_delete2"
                    android:layout_marginRight="16dp"
                    android:visibility="gone"
                    />
            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/btnValidIssue"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/background_button_green_stroke_light_green"
            android:onClick="true"
            android:layout_below="@+id/issue_layout2"
            android:layout_centerHorizontal="true"
            >
            <ImageView
                android:src="@mipmap/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/btnText"
                android:layout_toEndOf="@+id/btnText" />
            <TextView
                android:id="@+id/btnText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/valid_fund_password_btn_next"
                android:textColor="@color/btn_light_green"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>