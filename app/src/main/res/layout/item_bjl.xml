<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lottery_item_bg_color"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgLotteryIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/slot_bjl" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvLotteryType"
                    style="@style/Lottery_List_Item_Style"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:layout_weight="1"
                    android:layout_marginRight="35dp"
                    android:text="多人百家乐" />
                <TextView
                    android:layout_height="35dp"
                    android:layout_width="35dp"
                    android:background="@mipmap/arrow_right"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="center"
                    android:textColor="#6f93b6" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvLotteryDescription"
                style="@style/Lottery_List_Item_Des_Style"
                android:text="人气高，易分析，玩法齐全" />

        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/icon_hot_new"
        android:src="@mipmap/icon_hot_lottery"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"/>
</RelativeLayout>