<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <TextView
            style="@style/Lottery_PlayNum_Style"
            android:tag="playNum"
            android:text="位置选择：" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:tag="quickSelect">

            <CheckBox
                style="@style/Lottery_Quick_Select_Style"
                android:id="@+id/checkBoxTenThousand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="TenThousand"
                android:text="万" />

            <CheckBox
                style="@style/Lottery_Quick_Select_Style"
                android:id="@+id/checkBoxThousand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="Thousand"
                android:text="千" />

            <CheckBox
                style="@style/Lottery_Quick_Select_Style"
                android:id="@+id/checkBoxHundred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="Hundred"
                android:text="百" />

            <CheckBox
                style="@style/Lottery_Quick_Select_Style"
                android:id="@+id/checkBoxTen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="Ten"
                android:text="十" />

            <CheckBox
                style="@style/Lottery_Quick_Select_Style"
                android:id="@+id/checkBoxOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="One"
                android:text="个" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#03254b"
        android:layout_height="4dp"/>

</LinearLayout>
