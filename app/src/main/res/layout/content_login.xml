<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hec.app.activity.LoginActivity"
    tools:showIn="@layout/activity_login"

    android:id="@+id/login_back">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:weightSum="1"
        android:gravity="center">
        <Spinner
            android:id="@+id/debug_url_choose"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:visibility="gone">
            android:spinnerMode="dropdown"
        </Spinner>
        <!--<RelativeLayout-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="120px"-->
            <!--android:layout_marginBottom="120px">-->
        <!--<ImageView-->
            <!--android:layout_width="504px"-->
            <!--android:layout_height="180px"-->
            <!--android:background="@mipmap/img_login_logo"-->
            <!--android:layout_weight="0.07"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_centerHorizontal="true" />-->
        <!--</RelativeLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/backdoor_img"
                android:layout_width="168dp"
                android:layout_height="60dp"
                android:src="@mipmap/img_login_logo" />
        </LinearLayout>



        <RelativeLayout
            android:layout_width="304dp"
            android:layout_height="40dp"
            android:background="@drawable/inputbox"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="60dp"
            android:orientation="horizontal"
            android:id="@+id/relativeLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_login_head"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <AutoCompleteTextView
                android:id="@+id/txtUserName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/login_name_hint"
                android:textCursorDrawable="@drawable/color_cursor"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="#202020"/>

            <ImageView
                android:id="@+id/btn_history"
                android:src="@mipmap/btn_dropdown_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="-6.5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            />
        </RelativeLayout>

            <RelativeLayout
                android:layout_width="304dp"
                android:layout_height="40dp"
                android:background="@drawable/inputbox"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_login_password"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <EditText
                    android:id="@+id/txtPwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@null"
                    android:hint="@string/login_password_hint"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:password="true"
                    android:singleLine="true"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/btn_password_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/background_button_login_delete"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
                />
            </RelativeLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/captcha_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入验证码"
                android:textColor="@color/btn_light_green"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/captcha_text"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:imeOptions="actionDone"
                android:layout_marginLeft="15dp"
                android:singleLine="true"
                android:shadowColor="@color/btn_light_green"/>
            <ImageView
                android:id="@+id/captcha_img"
                android:src="@mipmap/getcaptcha_button"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:paddingBottom="15dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/btnUserLogin"
                android:layout_width="304dp"
                android:layout_height="40dp"
                android:background="@drawable/background_button_login"
                android:layout_toRightOf="@+id/tvUserName"
                android:onClick="true"
                android:orientation="horizontal">
                <ImageView
                    android:src="@mipmap/icon_button_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/textView4"
                    android:layout_toEndOf="@+id/textView4"
                    android:layout_marginLeft="0dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录    "
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView4" />
            </RelativeLayout>
            <CheckBox
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住密码"
                android:textSize="14sp"
                android:textColor="@color/btn_light_green"
                android:checked="false"
                android:id="@+id/rmb"
                android:theme="@style/WhiteCheck"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_findpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码？可以点击这里找回"
                android:textSize="14sp"
                android:textColor="@color/btn_light_green"
                android:layout_centerHorizontal="true"

                />

            <TextView
                android:id="@+id/text_chat"
                android:layout_below="@+id/text_findpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="联系客服"
                android:textSize="15sp"
                android:textColor="@color/btn_light_green"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
