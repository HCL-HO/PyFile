<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="?attr/actionBarSize"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@mipmap/mmc_bg_top"
        android:layout_weight="0.05">

        <TextView
            android:id="@+id/currentIssueNoTv"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@mipmap/mmc_bg_up"
        android:gravity="center"
        android:layout_weight="0.35"
        android:orientation="vertical"
        android:layout_gravity="center">

        <RelativeLayout
            android:id="@+id/pk10up"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:visibility="gone">

            <ImageView
                android:id="@+id/pk10upImg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/pkup_bg"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pk10down"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:visibility="gone">
            <ImageView
                android:id="@+id/pk10downImg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/pkdown_bg"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"/>
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/five_bg"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.21"
        android:orientation="vertical"
        android:background="@mipmap/mmc_bg_mid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:background="@mipmap/multiple_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/multiple1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/d0"
                    android:layout_marginLeft="39dp"
                    android:visibility="invisible"
                    />
                <ImageView
                    android:id="@+id/multiple2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/d0"
                    android:layout_marginLeft="1dp"
                    android:visibility="invisible"
                    />

                <ImageView
                    android:id="@+id/multiple3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/d0"
                    android:layout_marginLeft="1dp"
                    android:visibility="invisible"
                    />
                <ImageView
                    android:id="@+id/multiple4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/d0"
                    android:layout_marginLeft="1dp"
                    android:visibility="invisible"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mmc_s0"
                            android:clickable="true"
                            android:onClick="pressMultiple" android:tag="0"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mmc_s1"
                            android:onClick="pressMultiple" android:tag="1"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mmc_s2"
                            android:onClick="pressMultiple" android:tag="2"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mmc_s3"
                            android:onClick="pressMultiple" android:tag="3"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mmc_s4"
                            android:onClick="pressMultiple" android:tag="4"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mmc_s5"
                            android:onClick="pressMultiple" android:tag="5"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mmc_s6"
                            android:onClick="pressMultiple" android:tag="6"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mmc_s7"
                            android:onClick="pressMultiple" android:tag="7"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mmc_s8"
                            android:onClick="pressMultiple" android:tag="8"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mmc_s9"
                            android:onClick="pressMultiple" android:tag="9"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mmc_del"
                    android:onClick="pressMultiple" android:tag="10"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@mipmap/totallbet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/total1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/d0s"
                        android:layout_marginLeft="81dp"
                        android:visibility="invisible"

                        />
                    <ImageView
                        android:id="@+id/total2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/d0s"
                        android:layout_marginLeft="1px"
                        android:visibility="invisible"
                        />

                    <ImageView
                        android:id="@+id/total3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/d0s"
                        android:layout_marginLeft="1px"
                        android:visibility="invisible"
                        />
                    <ImageView
                        android:id="@+id/total4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/d0s"
                        android:layout_marginLeft="1px"
                        android:visibility="invisible"
                        />
                    <ImageView
                        android:id="@+id/total5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/d0s"
                        android:layout_marginLeft="1px"
                        android:visibility="invisible"
                        />

                    <ImageView
                        android:id="@+id/total6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/d0s"
                        android:layout_marginLeft="1px"
                        android:visibility="invisible"
                        />
                    <ImageView
                        android:id="@+id/total7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/d0s"
                        android:layout_marginLeft="1px"
                        android:visibility="invisible"
                        />
                    <ImageView
                        android:id="@+id/total8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/d0s"
                        android:layout_marginLeft="1px"
                        android:visibility="invisible"

                        />

                    <ImageView
                        android:id="@+id/total9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/d0s"
                        android:layout_marginLeft="1px"
                        android:visibility="invisible"
                        />
                    <ImageView
                        android:id="@+id/total10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/d0s"
                        android:layout_marginLeft="1px"
                        android:visibility="invisible"
                        />

                </LinearLayout>

                <LinearLayout
                    android:background="@mipmap/remaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/remaining1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/d0s"
                        android:layout_marginLeft="81dp"
                        android:visibility="invisible"
                        />
                    <ImageView
                        android:id="@+id/remaining2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/d0s"
                        android:layout_marginLeft="1px"
                        android:visibility="invisible"
                        />

                    <ImageView
                        android:id="@+id/remaining3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/d0s"
                        android:layout_marginLeft="1px"
                        android:visibility="invisible"
                        />
                    <ImageView
                        android:id="@+id/remaining4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/d0s"
                        android:layout_marginLeft="1px"
                        android:visibility="invisible"
                        />
                    <ImageView
                        android:id="@+id/remaining5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/d0s"
                        android:layout_marginLeft="1px"
                        android:visibility="invisible"
                        />

                    <ImageView
                        android:id="@+id/remaining6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/d0s"
                        android:layout_marginLeft="1px"
                        android:visibility="invisible"
                        />
                    <ImageView
                        android:id="@+id/remaining7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/d0s"
                        android:layout_marginLeft="1px"
                        android:visibility="invisible"
                        />
                    <ImageView
                        android:id="@+id/remaining8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/d0s"
                        android:layout_marginLeft="1px"
                        android:visibility="invisible"

                        />

                    <ImageView
                        android:id="@+id/remaining9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ddots"
                        android:layout_marginLeft="1px"
                        android:visibility="invisible"
                        />
                    <ImageView
                        android:id="@+id/remaining10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ddots"
                        android:layout_marginLeft="1px"
                        android:visibility="invisible"
                        />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mmc_open"
                android:onClick="openLottery"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/dummy1"
        android:layout_weight="0.24"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@mipmap/mmc_bg_bot">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="7dp"
            android:weightSum="1"
            android:id="@+id/linearLayout3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.36"
                android:text="@string/issue_no"
                android:textColor="#cccccc"

                android:textSize="14dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/lottery_num"
                android:layout_weight="0.26"
                android:textColor="#cccccc"
                android:textSize="14dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_weight="0.38"
                android:text="盈亏"
                android:textColor="#cccccc"
                android:textSize="14dp"/>

        </LinearLayout>
        <ListView
            android:id="@+id/history"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="7dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null">
        </ListView>
    </LinearLayout>
</LinearLayout>