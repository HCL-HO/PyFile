<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:tag="ballLinearLayout">

        <org.apmem.tools.layouts.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:tag="ballLayout">

            <com.hec.app.framework.widget.CircleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="龙"
                app:normalBackground="@mipmap/pk10_dragon"
                app:selectedBackground="@mipmap/pk10_dragon_selected" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_vs" />

            <com.hec.app.framework.widget.CircleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="虎"
                app:normalBackground="@mipmap/pk10_tiger"
                app:selectedBackground="@mipmap/pk10_tiger_selected" />
        </org.apmem.tools.layouts.FlowLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#03254b"/>

</LinearLayout>
