<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="32dp"
>
    <TextView
        style="@style/Lottery_Result_Issue_No_Style"
        android:id="@+id/lottery_history_issue"
        />
    <LinearLayout
        style="@style/Lottery_Result_Number_Style"
        android:id="@+id/lottery_history_result_ll">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pending_ll"
            android:layout_gravity="center"
            android:visibility="gone">
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_pending_lottery"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textColor="#7297BA"
                    android:textSize="14dp"
                    android:text="@string/pending_lottery"/>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/loadingPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone">

            <include layout="@layout/list_item_loading"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        style="@style/Lottery_Result_Profit_Style"
        android:id="@+id/lottery_history_profit"
        />
</LinearLayout>