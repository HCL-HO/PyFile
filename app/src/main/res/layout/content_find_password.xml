<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_find_password_layout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    >
    <RelativeLayout
        android:id="@+id/valid_issue_answer_title1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
>
        <TextView
            android:id="@+id/valid_issue_answer_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="14dp"
            android:textColor="#9e9e9e"
            android:text="@string/name"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/error"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="14dp"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/icon_exclaim"
                android:layout_marginRight = "10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E9516A"
                android:textSize="14dp"
                android:id="@+id/error_msg"
                />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/edit_field1"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:background="@color/light_gray"
        android:layout_below="@id/valid_issue_answer_title1"
        >
        <EditText
            android:id="@+id/userNamepwd"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:singleLine="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColorHint="@color/hint_word_gray"
            android:imeOptions="actionDone"
            />
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/icon_cross"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/btn_delete"
            android:layout_marginRight="16dp"
            android:visibility="gone"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/LittleTitletextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_field1"
        android:text="@string/find_password_textview"
        android:drawableLeft="@mipmap/icon_title"
        android:drawablePadding="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="5dp"
        android:textSize="14dp"
         />
    <ListView
        android:id="@+id/findpassword_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LittleTitletextView"
        >

    </ListView>

</RelativeLayout>
