<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">

    <View
        android:id="@+id/record_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"
        android:visibility="visible"/>
    <View
        android:id="@+id/record_divider3"
        android:layout_gravity="right"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/recordTime"
            android:layout_width="56dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:background="#f5f5f5">

            <TextView
                android:id="@+id/recordDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="18"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#606060"/>

            <TextView
                android:id="@+id/recordMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:layout_gravity="center"
                android:text="10月"
                android:textSize="9sp"
                android:textColor="#CFCFCF"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e0e0e0" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <TextView
                android:id="@+id/recordTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text="重庆时时彩"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="￥0.20"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/lotterytype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/price"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:maxLength="14"
                android:text="[五星不定位]"/>

            <TextView
                android:id="@+id/recordStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:text="已开奖"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="@mipmap/icon_drawn" />

            <TextView
                android:id="@+id/winAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="+1008600.00"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:paddingRight="2dp"
                android:textColor="#9e9e9e"
                />


        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/record_divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"
        android:visibility="gone"/>



</LinearLayout>