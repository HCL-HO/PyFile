<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hec.app.activity.RechargeAlipayActivity"
    tools:showIn="@layout/activity_recharge_qq">

    <RelativeLayout
        android:id="@+id/textview2_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl1">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="28dp"
            android:text="@string/recharge_quick_moneysum"
            android:textColor="#9e9e9e"
            android:textSize="14dp" />

        <LinearLayout
            android:id="@+id/layout_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="14dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/icon_exclaim" />

            <TextView
                android:id="@+id/recharge_moneysum_textview_cant_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recharge_amount_empty"
                android:textColor="#E9516A"
                android:textSize="14sp" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview2_field"
        android:background="#f2f2f2"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/recharge_moneysum_edittext"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:ems="10"
            android:hint="@string/recharge_quick_please_enter_moneysum"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:textColor="@color/btn_light_green"
            android:textColorHint="@color/hint_word_gray"
            android:textCursorDrawable="@drawable/textcursor" />

        <ImageView
            android:id="@+id/img_error_cross"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/icon_cross"
            android:textSize="16dp"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_layout_money"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/recharge_10_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/background_button_transparent"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="10元"
                android:textColor="@color/btn_word_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/recharge_100_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/background_button_transparent"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/recharge_alipay_btn_100"
                android:textColor="@color/btn_word_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/recharge_200_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/background_button_transparent"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/recharge_alipay_btn_200"
                android:textColor="@color/btn_word_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/recharge_500_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/background_button_transparent"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/recharge_alipay_btn_500"
                android:textColor="@color/btn_word_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/recharge_1000_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/background_button_transparent"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/recharge_alipay_btn_1000"
                android:textColor="@color/btn_word_gray" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/alipay_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linear1"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="28dp"
        android:text="@string/recharge_line"
        android:textColor="#9e9e9e" />

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/alipay_textview"
        android:background="@color/light_gray">

        <Spinner
            android:id="@+id/recharge_line_spinner"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/light_gray"
            android:imeOptions="actionNext"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:spinnerMode="dropdown" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/btn_pull_down" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_layout"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="san-serif-light"
            android:gravity="center"
            android:text="* "
            android:textColor="#E9516A"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="san-serif-light"
            android:gravity="left"
            android:text="请勿使用信用卡充值，导致的银行已扣款却充值不到账平台无法处理"
            android:textColor="#9E9E9E"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/alipay_recharge_btn"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/background_button_yellow"
        android:gravity="center|bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alipay_recharge_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:text="@string/recharge_alipay_btn"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_button_arrow_right" />

    </LinearLayout>


</RelativeLayout>