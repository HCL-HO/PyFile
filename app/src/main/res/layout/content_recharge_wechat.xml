<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="28dp"
            android:text="@string/recharge_quick_moneysum"
            android:textColor="#9e9e9e"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f2f2f2"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/recharge_moneysum_edittext"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@null"
                android:hint="@string/recharge_quick_please_enter_moneysum"
                android:inputType="number"
                android:maxLength="4"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:textColor="@color/btn_light_green"
                android:textColorHint="@color/hint_word_gray"
                android:textCursorDrawable="@drawable/textcursor" />

            <ImageView
                android:id="@+id/error_btn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@mipmap/icon_cross"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/recharge_10_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_transparent"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:maxLines="1"
                    android:text="10å…ƒ"
                    android:textColor="@color/btn_word_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/recharge_100_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_transparent"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:maxLines="1"
                    android:text="@string/recharge_alipay_btn_100"
                    android:textColor="@color/btn_word_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/recharge_200_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_transparent"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:maxLines="1"
                    android:text="@string/recharge_alipay_btn_200"
                    android:textColor="@color/btn_word_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/recharge_500_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_transparent"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:maxLines="1"
                    android:text="@string/recharge_alipay_btn_500"
                    android:textColor="@color/btn_word_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/recharge_1000_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_transparent"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_1000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:maxLines="1"
                    android:text="@string/recharge_alipay_btn_1000"
                    android:textColor="@color/btn_word_gray" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/recharge_2000_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_transparent"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_2000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:maxLines="1"
                    android:text="@string/recharge_alipay_btn_2000"
                    android:textColor="@color/btn_word_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/recharge_3000_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_transparent"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_3000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:maxLines="1"
                    android:text="@string/recharge_alipay_btn_3000"
                    android:textColor="@color/btn_word_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/recharge_4000_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_transparent"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_4000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:maxLines="1"
                    android:text="@string/recharge_alipay_btn_4000"
                    android:textColor="@color/btn_word_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/recharge_5000_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_transparent"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_5000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:maxLines="1"
                    android:text="@string/recharge_alipay_btn_5000"
                    android:textColor="@color/btn_word_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_transparent"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/recharge_alipay_btn_5000"
                    android:textColor="@color/btn_word_gray" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/amount_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wechat_recharge_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/background_button_yellow"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif-light"
            android:text="@string/recharge_alipay_btn"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@mipmap/icon_button_arrow_right" />
    </LinearLayout>

</LinearLayout>