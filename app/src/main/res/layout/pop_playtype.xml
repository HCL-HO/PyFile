<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        style="@style/Quick_Entrance_Rect_Style"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:layout_height="43.5dp">

        <RadioGroup
            android:id="@+id/tab_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="true"
            android:orientation="horizontal"
            android:layout_alignParentBottom= "true">

            <Button
                android:id="@+id/btnClassic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal|center"
                android:text="经典"
                android:textColor="@color/play_type_selected_text"
                android:textStyle="bold"
                android:textSize="17.5dp"
                android:background="@color/play_type_selected"
                android:tag="Classic"/>

            <Button
                android:id="@+id/btnExpert"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal|center"
                android:text="专家"
                android:textColor="@color/play_type_normal_text"
                android:textStyle="bold"
                android:textSize="17.5dp"
                android:background="@color/play_type_normal"
                android:tag="Expert"/>
        </RadioGroup>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/expert_lottery"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:background="#F4F0D5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <HorizontalScrollView
                android:id="@+id/expertScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/expertLayout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hint_lottery"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:background="#F4F0D5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单式复式选择"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:textColor="#B5944E"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp">

            <RelativeLayout
                android:id="@+id/single_double_selector"
                style="@style/single_double_selector"
                android:layout_gravity="center_vertical|right"
                android:layout_width="72dp"
                android:layout_height="24dp"
                android:layout_marginLeft="185dp"
                >
                <View
                    style="@style/single_bg_selector"
                    android:id="@+id/select_item_bg1"
                    android:layout_width="32dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"/>
                <TextView
                    android:id="@+id/select_item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="复式"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:layout_marginLeft="3dp"
                    />
                <View
                    style="@style/single_bg_selector"
                    android:id="@+id/select_item_bg2"
                    android:layout_width="32dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="1dp"
                    android:visibility="invisible"
                    />
                <TextView
                    android:id="@+id/select_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单式"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginLeft="35dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/listPlayType"
        android:dividerHeight="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:divider="#00000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

    <ListView
        android:id="@+id/listExpertPlayType"
        android:dividerHeight="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:divider="#00000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></ListView>
</LinearLayout>
