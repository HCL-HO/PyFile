<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="328dp"
    android:layout_height="160dp">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_weight = "1"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight = "5.5" android:gravity="center">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_logout"/>

        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight = "4.5" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欢迎新会员"
                android:textSize="20dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现在设置账户资料吗?"
                android:textSize="16dp"
                android:layout_marginTop="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="也可以稍后去设置页面中完成"
                android:textSize="14dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_weight = "3">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1" android:gravity="center"
            android:background="#f2f2f2"
            android:id="@+id/logout_no">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="稍后"
                android:textSize="14dp"/>

        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight = "1" android:gravity="center"

            android:id="@+id/logout_yes"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现在设置"
                android:textColor="@color/white"
                android:textSize="14dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>