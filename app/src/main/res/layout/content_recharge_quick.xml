<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hec.app.activity.RechargeQuickActivity"
    tools:showIn="@layout/activity_recharge_quick">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="20dp"
            android:text="@string/recharge_quick_moneysum" />

        <TextView
            android:id="@+id/recharge_moneysum_textview_cant_null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="20dp"
            android:text="@string/recharge_quick_moneysum_textview_cant_null"
            android:textColor="@color/red"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/recharge_moneysum_edittext"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textview2"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/light_gray"
            android:hint="@string/recharge_quick_please_enter_moneysum"
            android:inputType="numberDecimal"
            android:paddingLeft="25dp"
            android:textColor="@color/btn_light_green"
            android:textColorHint="@color/hint_word_gray"
            android:textCursorDrawable="@color/btn_light_green" />

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recharge_moneysum_edittext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/recharge_500_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_transparent"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/recharge_quick_btn_500"
                    android:textColor="@color/btn_word_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/recharge_1000_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_transparent"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_1000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/recharge_quick_btn_1000"
                    android:textColor="@color/btn_word_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/recharge_2000_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_transparent"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_2000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/recharge_quick_btn_2000"
                    android:textColor="@color/btn_word_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/recharge_5000_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_transparent"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_5000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/recharge_quick_btn_5000"
                    android:textColor="@color/btn_word_gray" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear1"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/recharge_10000_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_transparent"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_10000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/recharge_quick_btn_10000"
                    android:textColor="@color/btn_word_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/recharge_20000_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_transparent"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_20000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/recharge_quick_btn_20000"
                    android:textColor="@color/btn_word_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/recharge_30000_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_transparent"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_30000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/recharge_quick_btn_30000"
                    android:textColor="@color/btn_word_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/recharge_40000_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_transparent"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_40000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/recharge_quick_btn_40000"
                    android:textColor="@color/btn_word_gray" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/linear2"
            android:layout_below="@+id/linear2"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/recharge_49999_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_transparent"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_49999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/recharge_quick_btn_49999"
                    android:textColor="@color/btn_word_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_transparent"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/recharge_quick_btn_49999"
                    android:textColor="@color/btn_word_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_transparent"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/recharge_quick_btn_49999"
                    android:textColor="@color/btn_word_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/background_button_transparent"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/recharge_quick_btn_49999"
                    android:textColor="@color/btn_word_gray" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linear3"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="20dp"
            android:text="@string/recharge_quick_choice_line" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/textview"
            android:background="@color/light_gray">

            <Spinner
                android:id="@+id/recharge_line_spinner"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/light_gray"
                android:imeOptions="actionNext"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/btn_pull_down" />

        </RelativeLayout>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/quick_recharge_btn"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/background_button_yellow"
        android:gravity="center|bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quick_recharge_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:text="@string/recharge_quick_btn_rightnow_recharge"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_button_arrow_right" />

    </LinearLayout>


</RelativeLayout>