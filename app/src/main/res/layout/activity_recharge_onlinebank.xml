<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_recharge_onlinebank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hec.app.activity.RechargeOnlinebankActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back_white"
            android:onClick="backClick"
            android:paddingLeft="-40dp" />


        <TextView
            android:id="@+id/activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="网银充值"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/imgPersonalCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@mipmap/icon_personal"
            android:paddingRight="8dp" />
    </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择您的银行"
            android:padding="10dp"/>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/light_gray"
            android:gravity="center">
            <Spinner
                android:id="@+id/sp_choose_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

            </Spinner>
        </LinearLayout>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值金额"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/light_gray"
            android:gravity="center">
            <EditText
                android:id="@+id/et_onlinebank_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="number"
                android:textSize="18sp"
                android:maxLength="5"
                android:gravity="center_vertical"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/recharge_moneysum_edittext"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:id="@+id/recharge_500_btn"
            android:layout_width="75dp"
            android:layout_height="36dp"
            android:background="@drawable/background_button_transparent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:clickable="true">
            <TextView
                android:id="@+id/textview_500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/recharge_quick_btn_500"
                android:textColor="@color/btn_word_gray"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/recharge_1000_btn"
            android:layout_width="75dp"
            android:layout_height="36dp"
            android:background="@drawable/background_button_transparent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:clickable="true">
            <TextView
                android:id="@+id/textview_1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/recharge_quick_btn_1000"
                android:textColor="@color/btn_word_gray"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/recharge_2000_btn"
            android:layout_width="75dp"
            android:layout_height="36dp"
            android:background="@drawable/background_button_transparent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:clickable="true">
            <TextView
                android:id="@+id/textview_2000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/recharge_quick_btn_2000"
                android:textColor="@color/btn_word_gray"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/recharge_5000_btn"
            android:layout_width="75dp"
            android:layout_height="36dp"
            android:background="@drawable/background_button_transparent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:clickable="true">
            <TextView
                android:id="@+id/textview_5000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/recharge_quick_btn_5000"
                android:textColor="@color/btn_word_gray"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_below="@+id/linear1"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:id="@+id/recharge_10000_btn"
            android:layout_width="75dp"
            android:layout_height="36dp"
            android:background="@drawable/background_button_transparent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:clickable="true">
            <TextView
                android:id="@+id/textview_10000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/recharge_quick_btn_10000"
                android:textColor="@color/btn_word_gray"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/recharge_20000_btn"
            android:layout_width="75dp"
            android:layout_height="36dp"
            android:background="@drawable/background_button_transparent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:clickable="true">
            <TextView
                android:id="@+id/textview_20000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/recharge_quick_btn_20000"
                android:textColor="@color/btn_word_gray"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/recharge_30000_btn"
            android:layout_width="75dp"
            android:layout_height="36dp"
            android:background="@drawable/background_button_transparent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:clickable="true">
            <TextView
                android:id="@+id/textview_30000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/recharge_quick_btn_30000"
                android:textColor="@color/btn_word_gray"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/recharge_40000_btn"
            android:layout_width="75dp"
            android:layout_height="36dp"
            android:background="@drawable/background_button_transparent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:clickable="true">
            <TextView
                android:id="@+id/textview_40000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/recharge_quick_btn_40000"
                android:textColor="@color/btn_word_gray"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear3"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_below="@+id/linear2"
        android:layout_alignLeft="@+id/linear2"
        android:layout_alignStart="@+id/linear2">
        <RelativeLayout
        android:id="@+id/recharge_49999_btn"
        android:layout_width="75dp"
        android:layout_height="36dp"
        android:background="@drawable/background_button_transparent"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:clickable="true">
        <TextView
            android:id="@+id/textview_49999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/recharge_quick_btn_49999"
            android:textColor="@color/btn_word_gray"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>
        <RelativeLayout
            android:visibility="invisible"
            android:layout_width="75dp"
            android:layout_height="36dp"
            android:background="@drawable/background_button_transparent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:clickable="true">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/recharge_quick_btn_49999"
                android:textColor="@color/btn_word_gray"
                android:layout_centerVertical="true"
                android:layout_alignParentTop="true" />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="invisible"
            android:layout_width="75dp"
            android:layout_height="36dp"
            android:background="@drawable/background_button_transparent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/recharge_quick_btn_49999"
                android:textColor="@color/btn_word_gray"
                android:layout_centerVertical="true"
                android:layout_alignParentTop="true" />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="invisible"
            android:layout_width="75dp"
            android:layout_height="36dp"
            android:background="@drawable/background_button_transparent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/recharge_quick_btn_49999"
                android:textColor="@color/btn_word_gray"
                android:layout_centerVertical="true"
                android:layout_alignParentTop="true" />
        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:gravity="center|bottom"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/background_button_yellow"
        android:id="@+id/onlinebank_recharge_btn">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quick_recharge_textview"
            android:text="@string/recharge_quick_btn_rightnow_recharge"
            android:textSize="16dp"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-light"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_button_arrow_right"
            android:id="@+id/imageView2"/>

    </LinearLayout>
</RelativeLayout>
