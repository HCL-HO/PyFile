<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.hec.app.fragment.HomeFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_for_best"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/announcement_totle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/icon_bulletin"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/announcement"
                        style="@style/Bulletin_Style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bulletin" />
                </LinearLayout>

                <com.hec.app.framework.widget.BulletinView
                    android:id="@+id/noticeView"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/home_img"
                style="@style/Banner_Style" />
            <android.support.v4.view.ViewPager

                android:id="@+id/home_banner"
                android:layout_height="150dp"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_alignParentStart="true"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"

                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lottery_leaderboards_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutWinner"
                        style="@style/Middle_Title_Rect_Style"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgViewTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:src="@mipmap/icon_title" />

                        <TextView
                            android:id="@+id/tvWinner"
                            style="@style/Middel_Title_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/today_winner" />

                        <TextView
                            style="@style/Middel_Small_Title_Style"
                            android:id="@+id/today_best_prize_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/Middle_Rect_Style"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:alpha="1">

                            <ImageView
                                android:id="@+id/imgViewWinner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_cup" />

                            <TextView
                                style="@style/Middel_Content_Style"
                                android:id="@+id/today_best_prize_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:lines="1"
                                android:scrollHorizontally="true"
                                android:textSize="19sp"
                                android:maxWidth="100dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|bottom"
                                android:text="元"
                                android:textAppearance="@style/Middel_Content_Style"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rect_gray"
                            android:gravity="center"
                            android:padding="2dp"
                            android:alpha="0.5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/today_best_type"
                                android:text="暂无"
                                android:textAppearance="@style/Middel_Content_Style1" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/Middle_Title_Rect_Style"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:src="@mipmap/icon_title" />

                        <TextView
                            android:id="@+id/tvMyBigLottery"
                            style="@style/Middel_Title_Style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/my_big_lottery" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/Middle_Rect_Style"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgViewMyBigLottery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_prize" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/user_best_amount"
                                android:text="0.00"
                                android:lines="1"
                                android:textAppearance="@style/Middel_Content_Style" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|bottom"
                                android:text="元"
                                android:textAppearance="@style/Middel_Content_Style"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rect_gray"
                            android:gravity="center"
                            android:padding="2dp"
                            android:alpha="0.5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/user_best_type"
                                android:text="暂无"
                                style="@style/Middel_Content_Style1" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                style="@style/Quick_Entrance_Rect_Style"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/icon_title" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:text="@string/quick_entrance"
                    android:textAppearance="@style/Middel_Title_Style" />
            </LinearLayout>

            <com.hec.app.framework.widget.MyGridView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/gridviewFavorite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:columnWidth="90dp"
                android:horizontalSpacing="1.0px"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="1.0px" />
        </LinearLayout>
    </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>
